var num, user;
console.log("WELCOME TO CHECK THE EVEN NUMBER");
user = input("Do you want to check the number:(yes/no)");

if (user === "yes") {
  num = Number.parseInt(input("Please enter your number: "));

  if (num % 2 === 0) {
    console.log("The number is even!");
  } else {
    console.log("The number is not even!");
  }
} else {
  if (user === "no") {
    exit();
  }
}
